  <name>YUYU Theme</name>
  <vendor>IWAGAWAKE</vendor>
  <depends>com.intellij.modules.platform</depends>
  <extensions defaultExtensionNs="com.intellij">
    <themeProvider id="2573b7c1-fe17-451e-a5a1-4216bcf3d03c" path="/yuyu/themes/yuyushiki/yuzuko/yuzuko.light.theme.json"/>
  </extensions>
  <applicationListeners>
    <listener class="com.iwagawake.yuyu.ApplicationLifecycleListener" topic="com.intellij.ide.AppLifecycleListener"/>
    <listener class="com.iwagawake.yuyu.AfterStartupActivity" topic="com.intellij.openapi.startup.ProjectActivity"/>
    <listener class="com.iwagawake.yuyu.YUYUDynamicPluginListener" topic="com.intellij.ide.plugins.DynamicPluginListener"/>
  </applicationListeners>
</idea-plugin>
